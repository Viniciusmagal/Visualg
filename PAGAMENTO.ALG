algoritmo "pagamento"

var
nome: caractere
valorhora: real
pagamento: real
horastrabalhadas: inteiro

inicio
escreva("nome: ")
leia (nome)
  escreva("valor/hora: ")
  leia(valorhora)
  escreva("horas trabalhadas")
  leia(horastrabalhadas)
  pagamento <-- valorhora *horastrabalhadas
  escreval("o pagamento para o", nome, "deve ser", pagamento)



fimalgoritmo